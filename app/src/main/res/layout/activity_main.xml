<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.pako_.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="517dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/escudo" />

        <TextView
            android:id="@+id/textoOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/origenSelec" />

        <Spinner
            android:id="@+id/origen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/lugares" />

        <TextView
            android:id="@+id/textoDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/destinoSelec" />

        <Spinner
            android:id="@+id/destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/lugares" />

        <Button
            android:id="@+id/boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Ruta" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            app:srcCompat="@drawable/logo_dais" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Francisco Rafael Arce García"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licenciatura en Telemática" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
